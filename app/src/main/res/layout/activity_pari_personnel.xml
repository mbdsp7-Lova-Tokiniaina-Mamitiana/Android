<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/side_content"

    android:background="@color/colorWhiteOpaque"
    android:padding="0dp"
    tools:context=".ui.pari.PariActvity">
    <ProgressBar
        android:id="@+id/loading"
        android:visibility="visible"
        android:elevation="50dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:id="@+id/content_blur"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mosk_bold_700"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/my_bets"
                    android:textColor="@color/colorBlack2"
                    android:textSize="60sp"
                    >
                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:id="@+id/card_trame"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:layout_width="match_parent" android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/radius"
                    android:id="@+id/btn_progressing"
                    android:layout_marginLeft="10dp"
                    android:height="30dp"
                    android:layout_height="wrap_content" android:text="@string/en_cours"/>
                <View
                    android:layout_width="1dp"
                    android:background="@color/colorBlack"
                    android:layout_centerInParent="true"
                    android:layout_height="30dp"/>
                <Button
                    android:id="@+id/btn_finished"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"

                    android:height="30dp"
                    android:layout_height="wrap_content" android:text="@string/terminees" android:background="@drawable/border_help"/>
            </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/content"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false">


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            app:cardPreventCornerOverlap="false"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_weight="0.45"
            android:layout_height="0dp">
            <include
                layout="@layout/bottom_navigation" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>