<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_company"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="15dip"


       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:id="@+id/content_horizontal"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                android:id="@+id/card_company_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/image_tiers"
                    android:layout_margin="15dp"



                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:background="@drawable/img_rounded"


                    ></ImageView>

            </androidx.cardview.widget.CardView>


            <TextView
                android:gravity="center"
                android:id="@+id/text_company"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorBlack2"
                android:fontFamily="@font/mosk_bold_700"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Company">

            </TextView>

            <TextView
                android:id="@+id/company_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/open_sans"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack2"
                android:text="Adresse">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ImageButton
        android:elevation="15dp"
        android:background="@android:color/transparent"
        android:id="@+id/eye_detail"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="-120dp"
        android:layout_below="@+id/card_company"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/eye_detail">

    </ImageButton>
    <LinearLayout   android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignRight="@id/card_company"
        android:layout_alignBottom="@+id/card_company"
        android:layout_marginBottom="-20dp"
        android:layout_marginRight="25dp"
        >

        <TextView
            android:id="@+id/pagination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="1"
            android:textSize="14sp"


            />
        <TextView
            android:id="@+id/pagination2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 5"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"


            />
    </LinearLayout>

</RelativeLayout>