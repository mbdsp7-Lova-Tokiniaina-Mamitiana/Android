<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_company"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="15dip"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:id="@+id/content_horizontal"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:orientation="vertical">


            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/text_equipe1"
                    android:layout_width="wrap_content"

                    android:textSize="18sp"
                    android:textColor="@color/colorBlack2"
                    android:fontFamily="@font/mosk_bold_700"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Equipe">

                </TextView>


                <TextView
                    android:gravity="center"
                    android:id="@+id/text_equipe2"
                    android:layout_width="wrap_content"

                    android:textSize="18sp"
                    android:textColor="@color/colorBlack2"
                    android:fontFamily="@font/mosk_bold_700"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Equipe">

                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="25dp"
                    android:id="@+id/card_equipe_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    >

                    <ImageView
                        android:id="@+id/image_equipe1"
                        android:layout_margin="15dp"



                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/img_rounded"


                        ></ImageView>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="vs"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/mosk_normal_400"
                    android:textColor="@color/colorRed"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="25dp"
                    android:id="@+id/card_equipe_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    >

                    <ImageView
                        android:id="@+id/image_equipe2"
                        android:layout_margin="15dp"



                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/img_rounded"


                        ></ImageView>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/description_pari"
                android:gravity="center"
                android:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum"
                android:textStyle="italic"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button

                    android:elevation="25dp"
                    android:id="@+id/btn_pari"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                   android:layout_marginBottom="45dp"
                    android:background="@drawable/radius"
                    android:fontFamily="@font/open_sans"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textAllCaps="false"
                    android:text="@string/parier"

                    >

                </Button>
            </RelativeLayout>



      


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ImageButton
        android:elevation="15dp"
        android:background="@android:color/transparent"
        android:id="@+id/eye_detail"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="-120dp"
        android:layout_below="@+id/card_company"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/eye_detail">

    </ImageButton>
    <LinearLayout   android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignRight="@id/card_company"
        android:layout_alignBottom="@+id/card_company"
        android:layout_marginBottom="-20dp"
        android:layout_marginRight="25dp"
        >
        <TextView
            android:id="@+id/pagination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="14sp"


            />
        <TextView
            android:id="@+id/pagination2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 5"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"


            />
    </LinearLayout>

</RelativeLayout>