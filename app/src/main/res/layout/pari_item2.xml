<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/card_company2"



        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView

                        android:id="@+id/card_equipe_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:id="@+id/image_equipe1"
                            android:layout_margin="7dp"



                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/img_rounded"


                            ></ImageView>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:gravity="center"

                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/text_equipe1"
                            android:text="chealsea"
                            android:textSize="10dp"

                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <TextView

                        android:layout_width="40dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="vs"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/mosk_normal_400"
                        android:textColor="@color/colorRed"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:gravity="center"

                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Manch"
                            android:textSize="10dp"
                            android:id="@+id/text_equipe2"

                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <androidx.cardview.widget.CardView

                        android:id="@+id/card_equipe_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:id="@+id/image_equipe2"
                            android:layout_margin="7dp"



                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/img_rounded"


                            ></ImageView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/description_pari"
                android:gravity="center"
                android:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum"
                android:textStyle="italic"
                />
            <Button

                android:elevation="25dp"
                android:id="@+id/btn_pari"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"

                android:background="@drawable/radius"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:text="@string/parier"

                >

            </Button>




        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>