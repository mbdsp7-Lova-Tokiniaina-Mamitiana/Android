<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/card_company2"



        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView

                    android:id="@+id/card_equipe_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"

                    >

                    <ImageView
                        android:id="@+id/image_equipe1"
                        android:layout_margin="7dp"



                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/img_rounded"


                        ></ImageView>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:gravity="center"

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/text_equipe1"
                        android:text="chealsea"
                        android:textSize="12dp"
                        android:fontFamily="@font/mosk_bold_700"

                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView

                    android:layout_width="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="vs"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/mosk_normal_400"
                    android:textColor="@color/colorRed"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center"

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Manch"
                        android:textSize="12dp"
                        android:id="@+id/text_equipe2"
                        android:fontFamily="@font/mosk_bold_700"
                        android:textStyle="bold"


                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/card_equipe_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <ImageView
                        android:id="@+id/image_equipe2"
                        android:layout_margin="7dp"



                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/img_rounded"


                        ></ImageView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/description_pari"
                android:gravity="center"
                android:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum"
                android:textStyle="italic"
                />
            <LinearLayout
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/mosk_bold_700"
                    android:layout_height="wrap_content" android:text="@string/votre_mise"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="30dp"
                    android:layout_height="20dp" android:src="@drawable/token"/>

                <TextView
                    android:id="@+id/mise"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorRed"
                    android:fontFamily="@font/mosk_bold_700"
                    android:layout_height="wrap_content" android:text="200"/>


            </LinearLayout>
            <RelativeLayout
               android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="15dp"

                        android:layout_width="26dp"
                        android:src="@drawable/clock"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_height="26dp"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/open_sans"
                        android:layout_alignParentRight="true"
                        android:text="(0.5)"

                        android:textColor="@color/colorBlack2"
                        android:textSize="15dp"
                        android:textStyle="italic">

                    </TextView>

                </LinearLayout>


            </RelativeLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>